{
  "compilerOptions": {
    "outDir": "./lib",           // Output directory for JavaScript files
    "rootDir": "./src",           // Source directory
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "CommonJS",         // Set to "CommonJS" for CommonJS output
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "strict": false,              // Set to true for stricter type-checking if needed
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/tests", "src/ui-tests", "src/assets"]
}
